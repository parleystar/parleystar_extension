            "css/clapper.css",
            "css/instagram.css",
            "css/kick.css",
            "css/loco.css",
            "css/locals.css",
            "css/nimo.css",
            "css/noice.css",
            "css/odysee.css",
            "css/parleystar.css",
            "css/parti.css",
            "css/rooter.css",
            "css/rumble.css",
            "css/shareplay.css",
            "css/sooplive.css",
            "css/tiktok.css",
            "css/trovo.css",
            "css/twitch.css",
            "css/x.css",
            "css/youtube.css"
        ],
        "matches": ["<all_urls>"]
    }
]
}